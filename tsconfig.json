{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "es6",
            "es7",
            "es2020",
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "alwaysStrict": true,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/__test__"
    ]
}
